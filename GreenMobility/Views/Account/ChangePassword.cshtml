@model GreenMobility.ViewModels.ChangePasswordVM

@{
    ViewData["Title"] = @_localization.Getkey("ChangePassword");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .custom-cancel-font-size {
            font-size: 16px !important;
        }
    </style>
}

<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="/assets/images/breadcrumb/bg/becdanhphoto.png">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">@_localization.Getkey("MyAccount")</h2>
                        <ul>
                            <li>
                                <a href="/">@_localization.Getkey("Home")<i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>@_localization.Getkey("MyAccount")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="account-page-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    @await Html.PartialAsync("_SideNavPartialView.cshtml")
                </div>
                <div class="col-lg-9">
                    <div class="tab-pane fade show active" id="account-dashboard" role="tabpanel" aria-labelledby="account-dashboard-tab">
                        <h4 class="small-title">@_localization.Getkey("ChangePassword")</h4>
                        <div class="myaccount-details">
                            <form method="post" asp-controller="Account" asp-action="ChangePassword" class="myaccount-form">
                                <div class="myaccount-form-inner">
                                    <div class="single-input">
                                        <label class="form-label fw-bold">@_localization.Getkey("CurrentPassword") </label>
                                        <input asp-for="CurrentPassword" type="password" class="form-control">
                                        @Html.ValidationMessage("CurrentPassword", "", new { @style = "color:#f00" })
                                    </div>
                                    <div class="single-input single-input-half">
                                        <label class="form-label fw-bold">@_localization.Getkey("NewPassword") </label>
                                        <input asp-for="NewPassword" type="password" class="form-control">
                                        @Html.ValidationMessage("NewPassword", "", new { @style = "color:#f00" })
                                    </div>
                                    <div class="single-input single-input-half">
                                        <label class="form-label fw-bold">@_localization.Getkey("ConfirmPassword") </label>
                                        <input asp-for="ConfirmPassword" type="password" class="form-control">
                                        @Html.ValidationMessage("ConfirmPassword", "", new { @style = "color:#f00" })
                                    </div>
                                    <div class="single-input">
                                        <button class="btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0" type="submit">
                                            <span>@_localization.Getkey("Save")</span>
                                        </button>
                                        <a class="btn btn-custom-size lg-size btn-primary btn-secondary-hover rounded-0 custom-cancel-font-size" asp-controller="Account" asp-action="Profile">
                                            <span>@_localization.Getkey("Cancel")</span>
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

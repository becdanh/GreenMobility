@model PagedList.Core.IPagedList<GreenMobility.Models.Bicycle>
@{
    Parking parking = ViewBag.CurrentParking;
    ViewData["Title"] = parking.ParkingName + ": page  " + ViewBag.CurrentPage;
    Layout = "~/Views/Shared/_Layout.cshtml";
    int PageCurrent = ViewBag.CurrentPage;
    int PageNext = PageCurrent + 1;
}
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="assets/images/breadcrumb/bg/rentbike.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">@parking.ParkingName</h2>
                        <ul>
                            <li>
                                <a href="index.html">Trang Chủ <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>@parking.ParkingName</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="shop-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="product-topbar">
                        <ul>
                            <li class="page-count">
                                <span>23</span> Product Found of <span>50</span>
                            </li>
                        </ul>
                    </div>
                    <div class="tab-content text-charcoal pt-8">
                        <div class="tab-pane fade show active" id="grid-view" role="tabpanel" aria-labelledby="grid-view-tab">
                            <div class="product-grid-view row">
                                @if (Model != null && Model.Count() > 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        <div class="col-lg-3 col-sm-6 mb-6">
                                            <div class="product-item">
                                                <div class="product-img img-zoom-effect">
                                                    <a>
                                                        <img class="img-full" src="~/images/bicycles/@item.Photo" alt="@item.Alias">
                                                    </a>
                                                    <div class="product-add-action">
                                                        <ul>
                                                            <li>
                                                                <a>
                                                                    <i class="pe-7s-cart add-to-cart" data-bicycle-id="@item.BicycleId"></i>
                                                                    <input type="hidden" id="bicycleId_@item.BicycleId" value="@item.BicycleId" />
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                                <div class="product-content">
                                                    <a class="product-name" href="single-product.html">@item.BicycleName</a>
                                                    <div class="price-box pb-1">
                                                        <span class="new-price">@item.RentalPrice.Value.ToString("#,##0") VNĐ</span>
                                                    </div>
                                                    <div class="price-box pb-1">
                                                        <span class="new-price">@item.Parking.Address</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="pagination-area pt-10">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-center">
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Previous">
                                        <span class="fa fa-chevron-left"></span>
                                    </a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Next">
                                        <span class="fa fa-chevron-right"></span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
@section Scripts {
    <script>
        $(document).ready(function () {
            $(".add-to-cart").click(function () {
                var bicycleId = $(this).data("bicycle-id"); // Lấy id của sản phẩm
                $.ajax({
                    url: '/api/cart/add',
                    type: "POST",
                    dataType: "JSON",
                    data: {
                        bicycleId: bicycleId,
                    },
                    success: function (response) {
                        if (response.success) {
                            loadHeaderCart();
                            location.reload();
                        }
                    },
                    error: function (error) {
                        alert("Có lỗi xảy ra khi thêm sản phẩm vào giỏ hàng: " + error.responseText);
                    }
                });
            });
            function loadHeaderCart() {
                $('#numberCart').load("/AjaxContent/NumberCart");
            }
        });
    </script>

}
@model List<GreenMobility.ViewModels.CartItemVM>
@if (Model != null && Model.Count() > 0)
{
    <li class="minicart-wrap me-3 me-lg-0">
        <a href="cart.html">
            <i class="pe-7s-shopbag"></i>
            <span class="quantity">@Model.Count()</span>
        </a>
    </li>
}
else
{
    <li class="minicart-wrap me-3 me-lg-0">
        <a href="cart.html">
            <i class="pe-7s-shopbag"></i>
        </a>
    </li>
}

@using Microsoft.AspNetCore.Http;
@model List<GreenMobility.ViewModels.CartItemVM>
@{
    ViewData["Title"] = "Giỏ thuê";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var returnUrl = Context.Request.Query["ReturnUrl"];
}
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="assets/images/breadcrumb/bg/becdanhphoto1.png">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Giỏ thuê</h2>
                        <ul>
                            <li>
                                <a href="/">Trang chủ<i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>Giỏ thuê</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="cart-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    @if (Model != null && Model.Count() > 0)
                    {
                        @foreach (var parkingGroup in Model.GroupBy(x => x.bicycle.ParkingId))
                        {
                            <div class="table-content table-responsive">
                                <h2>@parkingGroup.First().ParkingName</h2>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th class="product_remove">Xóa</th>
                                            <th class="product-thumbnail">Ảnh đại diện</th>
                                            <th class="cart-product-name">Sản phẩm</th>
                                            <th class="cart-product-name">Biển số xe</th>
                                            <th class="product-quantity">Giá thuê</th>
                                            <th class="product-quantity">Thời gian thuê</th>
                                            <th class="product-subtotal">Thành tiền</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null && Model.Count() > 0)
                                        {
                                            foreach (var item in parkingGroup)
                                            {
                                                <tr>
                                                    <td class="product_remove">
                                                        <input type="button" value="X" class="removecart btn btn-primary" data-mahh="@item.bicycle.BicycleId" />
                                                    </td>
                                                    <td class="product-thumbnail">
                                                        <a href="javascript:void(0)">
                                                            <img src="~/images/bicycles/@item.bicycle.Photo" alt="@item.bicycle.BicycleName" style="height:112px;width:124px">
                                                        </a>
                                                    </td>
                                                    <td class="product-name">@item.bicycle.BicycleName</td>
                                                    <td class="product-name">@item.bicycle.LicensePlate</td>
                                                    <td class="quantity">@item.bicycle.RentalPrice</td>
                                                    <td class="quantity">@item.RentalHours</td>
                                                    <td class="product-subtotal"><span class="amount">@item.TotalMoney.ToString("#,##0") VNĐ</span></td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="row">
                                <div class="cart-page-total">
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#updateAndPickupModal">
                                        Cập nhật thời gian thuê và nhận xe
                                    </button>
                                </div>
                                <!-- Modal -->
                                <div class="modal fade" id="updateAndPickupModal" tabindex="-1" aria-labelledby="updateAndPickupModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="updateAndPickupModalLabel">Cập nhật thời gian thuê và nhận xe</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="form-group">
                                                    <label for="rentalHour">Thời gian thuê:</label>
                                                    <input type="number" class="form-control" id="rentalHour">
                                                </div>
                                                <br />
                                                <div class="form-group">
                                                    <label for="pickupTime">Thời gian lấy xe:</label>
                                                    <input type="datetime-local" class="form-control" id="pickupTime">
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                                <button type="button" class="btn btn-primary" id="updateAndPickupConfirmBtn">Xác nhận</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-5 ml-auto">
                                    <div class="cart-page-total">
                                        <h2>Tổng đơn hàng</h2>
                                        <ul>
                                            <li>Thành tiền <span>@parkingGroup.Sum(x => x.TotalMoney).ToString("#,##0") VNĐ</span></li>
                                        </ul>
                                        @{
                                            var taikhoanID = Context.Session.GetString("CustomerId");
                                            if (taikhoanID != null)
                                            {
                                                <input type="hidden" name="ParkingID" value="@parkingGroup.Key" />
                                                <a href="/checkout.html?parkingID=@parkingGroup.Key" class="btn btn-secondary btn-primary-hover">Đến Trang Thanh toán</a>

                                            }
                                            else
                                            {
                                                <a href="/dang-nhap.html?returnUrl=/checkout.html" class="btn btn-secondary btn-primary-hover">Đến Trang Thanh toán</a>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p>Chưa có xe nào được thuê. Cùng nhau tích cực đạp xe nhé</p>
                    }
                </div>
            </div>
        </div>
    </div>
</main>
@section Scripts {
    <script>
        $(function () {
            function loadHeaderCart() {
                $('#numberCart').load("/AjaxContent/NumberCart");
            }
            $(".removecart").click(function () {
                var bicycleid = $(this).attr("data-mahh");
                $.ajax({
                    url: "/api/cart/remove", // Đúng đường dẫn tới action Remove
                    type: "POST",
                    dataType: "JSON",
                    data: { bicycleId: bicycleid }, // Truyền dữ liệu chính xác
                    success: function (result) {
                        if (result.success) {
                            loadHeaderCart();
                            location.reload(); // Tải lại trang sau khi xóa
                        }
                    },
                    error: function (rs) {
                        alert("Remove Cart Error !");
                    }
                });
            });
            $(function () {
                $('#updateAndPickupConfirmBtn').click(function () {
                    var rentalHour = $('#rentalHour').val();
                    var pickupTime = $('#pickupTime').val();
                    $.ajax({
                        url: '/api/cart/update',
                        type: 'POST',
                        data: {
                            rentalHour: rentalHour,
                            pickupTime: pickupTime
                        },
                        success: function (response) {
                            if (response.success) {
                                location.reload(); // Tải lại trang sau khi cập nhật
                            } else {
                                alert('Có lỗi xảy ra khi cập nhật thông tin giỏ hàng');
                            }
                        },
                        error: function () {
                            alert('Có lỗi xảy ra khi gửi yêu cầu cập nhật');
                        }
                    });
                });
            });

            $('#updateAndPickupModal').on('show.bs.modal', function (event) {
                $.ajax({
                    url: '/api/cart/getcartinfo',
                    type: 'GET',
                    success: function (response) {
                        if (response.success) {
                            $('#rentalHour').val(response.rentalHour);
                            $('#pickupTime').val(response.pickupTime);
                        } else {
                            alert('Có lỗi xảy ra khi lấy thông tin giỏ hàng');
                        }
                    },
                    error: function () {
                        alert('Có lỗi xảy ra khi gửi yêu cầu lấy thông tin giỏ hàng');
                    }
                });
            });
        });
    </script>
}
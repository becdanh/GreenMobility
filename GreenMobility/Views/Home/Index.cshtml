@model IEnumerable<GreenMobility.Models.Post>
@{
    ViewData["Title"] = _localization.Getkey("Home");
}
<div class="slider-area">
    <div class="swiper-container main-slider-2 swiper-arrow with-bg_white">
        <div class="swiper-wrapper">
            <div class="swiper-slide animation-style-01">
                <div class="slide-inner bg-height" data-bg-image="assets/images/slider/bg/banner.png">
                    <div class="container">
                        <div class="slide-content">
                            <h2 class="title font-weight-bold mb-4">Green <br> Mobility</h2>
                            <p class="short-desc different-width mb-9">@_localization.Getkey("ThankYou")</p>
                            <div class="button-wrap">
                                <a class="btn btn-custom-size lg-size btn-primary btn-white-hover rounded-0" href="Rental">@_localization.Getkey("RentalNow")</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Begin Banner Area -->
<div class="section-title text-center pb-55  section-space-y-axis-100">
    <span class="sub-title text-primary">@_localization.Getkey("UsageInstructions")</span>
    <h2 class="title mb-0">@_localization.Getkey("BookingRidingPayment")</h2>
</div>
<div class="banner-with-testimonial py-10" data-bg-image="assets/images/banner/2-1-1920x523.jpg">

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="parallax-img-wrap">
                    <div class="papaya">
                        <div class="scene fill">
                            <div class="expand-width" data-depth="0.2">
                                <img src="assets/images/banner/inner-img/hdsd.png" alt="Banner Images">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 align-self-center">
                <div class="swiper-container testimonial-slider text-white">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide">
                            <div class="testimonial-item">
                                <div class="testimonial-content section-title">
                                    <span class="sub-title">@_localization.Getkey("Step") 1</span>
                                    <h2 class="title mb-6">@_localization.Getkey("Booking")</h2>
                                    <p class="short-desc">@_localization.Getkey("Step1Desc")</p>
                                </div>
                            </div>
                        </div>
                        <div class="swiper-slide">
                            <div class="testimonial-item">
                                <div class="testimonial-content section-title">
                                    <span class="sub-title">@_localization.Getkey("Step") 2</span>
                                    <h2 class="title mb-6">@_localization.Getkey("Riding")</h2>
                                    <p class="short-desc">@_localization.Getkey("Step2Desc")</p>
                                </div>
                            </div>
                        </div>
                        <div class="swiper-slide">
                            <div class="testimonial-item">
                                <div class="testimonial-content section-title">
                                    <span class="sub-title">@_localization.Getkey("Step") 3</span>
                                    <h2 class="title mb-6">@_localization.Getkey("Payment")</h2>
                                    <p class="short-desc">@_localization.Getkey("Step3Desc")</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Add Arrows -->
                    <div class="testimonial-button-next"></div>
                    <div class="testimonial-button-prev"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End Here -->

<!-- Begin Blog Area -->
<div class="blog-area section-space-y-axis-100">
    <div class="container">
        <div class="section-title text-center pb-55">
            <span class="sub-title text-primary">@_localization.Getkey("ReadOur")</span>
            <h2 class="title mb-0">@_localization.Getkey("LatestBlog")</h2>
        </div>
        <div class="row">
            @foreach (var post in Model)
            {
                string url = $"/{post.Alias}-{post.PostId}.html";
                <div class="col-lg-4">
                    <div class="blog-item">
                        <div class="blog-img img-zoom-effect">
                            <a href="@url">
                                <img class="img-full h-100" src="~/images/posts/@post.Thumb" alt="@post.Title" style="width: 370px; height: 315px;">
                            </a>
                        </div>
                        <div class="blog-content">
                            <div class="blog-meta text-dim-gray pb-3">
                                <ul>
                                    <li class="date"><i class="fa fa-calendar-o me-2"></i>@post.CreatedDate.Value.ToShortDateString()</li>
                                </ul>
                            </div>
                            <h5 class="title mb-4">
                                <a href="@url">@post.Title</a>
                            </h5>
                            <p class="short-desc mb-5">@post.ShortContents</p>
                            <div class="button-wrap">
                                <a class="btn btn-custom-size btn-dark btn-lg rounded-0" href="@url">@_localization.Getkey("ReadMore")</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Blog Area End Here -->

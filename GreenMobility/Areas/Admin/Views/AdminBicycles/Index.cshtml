@model PagedList.Core.IPagedList<GreenMobility.Models.Bicycle>

@{
    int currentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Quản lý xe đạp: page " + currentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h2 class="header-title">Quản lý xe đạp</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <span class="breadcrumb-item active">Danh sách xe đạp : Trang @currentPage</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
                <div class="d-md-flex">
                    <div class="m-b-10 m-r-10">
                        <div class="input-affix m-v-4">
                            <i class="prefix-icon anticon anticon-search opacity-04"></i>
                            <input id="keyword" name="keyword" type="text" class="form-control" placeholder="Tìm kiếm">
                        </div>
                    </div>
                    <div class="m-b-10">
                        <select class="custom-select" id="idstatus" name="idstatus" style="min-width: 180px;" asp-items="ViewBag.TrangThai">
                            <option value="" disabled selected>Chọn trạng thái</option>
                            <option value="0" selected>Tất cả trạng thái</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 text-right">
                <a class="btn btn-primary" asp-controller="AdminBicycles" asp-action="Create">
                    <i class="anticon anticon-plus-circle m-r-5"></i>
                    <span>Thêm mới xe</span>
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Tên xe đạp</th>
                        <th scope="col">Biển số</th>
                        <th scope="col">Bãi đỗ</th>
                        <th scope="col">Trạng thái</th>
                        <th class="text-right" scope="col">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.BicycleName</td>
                            <td>@item.LicensePlate</td>
                            <td>@item.Parking.ParkingName</td>
                            <td>@item.BicycleStatus.Description</td>
                            <td class="text-right">
                                <a class="btn btn-icon btn-hover btn-sm btn-rounded" asp-controller="AdminBicycles" asp-action="Edit" asp-route-id="@item.BicycleId">
                                    <i class="anticon anticon-edit"></i>
                                </a>
                                <a class="btn btn-icon btn-hover btn-sm btn-rounded" asp-controller="AdminBicycles" asp-action="Details" asp-route-id="@item.BicycleId">
                                    <i class="anticon anticon-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="row">
            <div class="col-sm-12 col-md-5">
                <ul class="pagination">
                    <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="AdminBicycles" asp-route-Status="@ViewBag.CurrentStatus" asp-action="Index"></pager>
                </ul>
            </div>

            <div class="col-sm-12 col-md-7 text-right">
                <p>Tổng số xe: @Model.TotalItemCount</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            jQuery("#idstatus").change(function () {
                var status = jQuery(this).children(":selected").attr("value");
                status = parseFloat(status);
                $('#idstatus option').removeAttr('selected');
                $("#idstatus > [value=" + status + "]").attr("selected", "true");

                $.ajax({
                    url: '/Admin/AdminBicycles/Filter',
                    datatype: "json",
                    type: "GET",
                    data: {
                        Status: status
                    },
                    async: true,
                    success: function (results) {
                        if (results.status == "success") {
                            window.location.href = results.redirectUrl;
                        }
                    },
                    error: function (xhr) {
                        alert('error');
                    }
                });
            });
            $("#keyword").keypress(function (e) {
                if (e.which == 13) { // Kiểm tra nếu phím nhấn là phím Enter (mã 13)
                    var keyword = $(this).val().trim();
                    $.ajax({
                        url: '/Admin/AdminBicycles/Search',
                        datatype: "json",
                        type: "GET",
                        data: {
                            keyword: keyword
                        },
                        async: true,
                        success: function (results) {
                            if (results.status == "success") {
                                window.location.href = results.redirectUrl;
                            }
                        },
                        error: function (xhr) {
                            alert('error');
                        }
                    });
                }
            });
        });
    </script>
}
